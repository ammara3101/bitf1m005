@model List<Ead_project.Models.Theme>
@{
    ViewBag.Title = "update_event";
}

<!DOCTYPE HTML>
<html>
<head>
<title>Free Brighton Website Template | Services :: w3layouts</title>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body id="admin">
    <p class="f1" style="color:deeppink">
        ALL Events details!!
    </p><br><br> <br><br>
    <div class="table_div">
        <table class="show_table">
            <tr>
                <th>Event Theme</th>
                <th>Event Arrangement</th>
                <th>Seating Arrangement</th>
                <th>Stage Arrangement</th>
                <th>Stage  Seating</th>
                <th>Stage Lightening</th>
                <th>Budget</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.theme_name</td>
                    <td>@item.color_combination</td>
                    <td>@item.seating_arrangnment</td>
                    <td>@item.stage_arrangnment</td>
                    <td>@item.stage_seating</td>
                    <td>@item.stage_lightening</td>
                    <td>@item.budget</td>
                </tr>

            }

        </table>
    </div><br> <br> <br><br />
    <p class="f1" style="color:deeppink">
        Update Events details!!
    </p>
    <div class="adminside">

        <form class="f_admin" method="post" action="/Admin/onupdate_events">
            Theme Name<br>
            <input type="text" id="color" name="theme_name"><span id="errmob" style="color:red;"></span><br><br>

            Color Combination<br>
            <input type="text" id="color" name="color_combination"><span id="errmob" style="color:red;"></span><br><br>
            Seating Arrangement
            <br><input type="text" id="color" name="seating_arrangement"><span id="errmob" style="color:red;"></span><br><br>

            Stage Arrangement<br>
            <input type="text" id="color" name="stage_arrangement"><span id="errmob" style="color:red;"></span><br><br>

            Stage Seating Arrangement<br>
            <input type="text" id="color" name="stage_seating"><span id="errmob" style="color:red;"></span><br><br>

            Stage Lightening Arrangement<br>
            <input type="text" id="color" name="stage_lightening"><span id="errmob" style="color:red;"></span><br><br>

            Bugdet<br>
            <input type="text" id="color" name="budget"><span id="errmob" style="color:red;"></span><br><br>

            <div class="more">
                <input class="btn btn-primary" type="submit" value="Update"></>
            </div>
            <br><br> <br><br><br><br><br>
        </form>
    </div>
    <p style="font-size:smaller;color:red"> @ViewBag.update @ViewBag.error </p><br>

    <div class="clear"></div>

</body>
</html>