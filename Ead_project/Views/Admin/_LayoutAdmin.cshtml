<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="header">
        <div class="wrap">
            <div class="logo">
                <a href="index.html"><img src="~/Images/logo.png" alt="" /></a>
            </div>
            <div class="top-nav">
                <div class="menu">
                    <ul id="list">
                        <li>
                            @Html.ActionLink("Login", "Admin_index", "Admin")
                            <ul>
                                <li>@Html.ActionLink("Sign Up", "Admin_signup", "Admin")</li>
                                <li>@Html.ActionLink("Change Password", "admin_pass", "Admin")</li>
                            </ul>
                        </li>
                        <li>
                            @Html.ActionLink("Events Details", "admin_show", "Admin")
                            <ul>
                                <li>@Html.ActionLink("Update Events Details", "update_event", "Admin")</li>
                                <li>@Html.ActionLink("Delete Events Details", "delete_event", "Admin")</li>
                                <li>@Html.ActionLink("Add Events Details", "Add_event", "Admin")</li>
                            </ul>
                    </li>
                        <li>
                            @Html.ActionLink("Users Details", "Show_user", "Admin")
                        <ul>
                            <li>@Html.ActionLink("Show Register User", "show_register_user", "Admin")</li>
                            <li>@Html.ActionLink("Show Register Theme", "show_register_theme", "Admin")</li>
                        </ul>
                    </li>
                        <li>@Html.ActionLink("Show Events", "show_events", "Admin")</li>
                    </ul>
                    <div class="clear"></div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    
    <div>
        @RenderBody()
    </div>
    <div class="copy-right">
        <div class="wrap">
            <p class="copy"><span>Brighton</span> © All Rights Reseverd</p> <p class="design"> Design by  <a href="http://w3layouts.com">W3Layouts</a></p>
            <div class="clear"></div>
        </div>
    </div>
</body>
</html>
